{% extends "layout.html.twig" %}

{% block title %}Ajouter un utilisateur{% endblock %}

{% block content %}

<h1>{{ block('title') }}</h1>

{% for flashMessage in app.session.flashbag.get('success') %}
<div class="alert alert-success">
    {{ flashMessage }}
</div>
{% endfor %}

{% if form_errors(userForm.password.first) %}
<div class="alert alert-danger">
    {{ form_errors(userForm.password.first) }}
</div>
{% endif %}

<div class="container well">
    <div class="row">
        <div class="col-sm-offset-3 col-sm-6">
            {{ form_start(userForm) }}
                <div class="form-group">
                    {{ form_errors(userForm.username) }}
                    {{ form_widget(userForm.username, {'attr': {
                        'class': 'form-control',
                        'placeholder': 'Ins√©rez votre nom d\'utilisateur'
                    }}) }}
                </div>
                <div class="form-group">
                    {{ form_errors(userForm.password.first) }}
                    {{ form_widget(userForm.password.first, {'attr': {
                        'class': 'form-control',
                        'placeholder': 'Composez votre mot de passe'
                    }}) }}
                </div>
                <div class="form-group">
                    {{ form_errors(userForm.password.second) }}
                    {{ form_widget(userForm.password.second, {'attr': {
                        'class': 'form-control',
                        'placeholder': 'Composez votre mot de passe'
                    }}) }}
                </div>
                <div class="form-group">
                    {{ form_errors(userForm.role) }}
                    {{ form_widget(userForm.role, {'attr': {
                        'class': 'form-control'
                    }}) }}
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <span class="glyphicon glyphicon-pencil"></span> Envoyer
                    </button>
                </div>
            {{ form_end(userForm) }}
        </div>
    </div>
</div>

{% endblock %}