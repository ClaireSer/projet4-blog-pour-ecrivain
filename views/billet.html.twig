{% extends "layout.html.twig" %}

{% block title %}{{ billet.title }}{% endblock %}

{% block content %}
<div class="container">
    <div class="row">
        <div class="col-sm-offset-1 col-sm-10">
            <h2>{{ billet.title }}</h2>
            <p>{{ billet.content }}</p>            
        </div>
    </div>
    <div class="row">
        <div class="col-sm-offset-1 col-sm-10">
            <h3>Commentaires</h3>
            {% for comment in comments %}
                <p><strong>{{ comment.author.username }}</strong> said : {{ comment.content }} </p>
            {% endfor %}
        </div>
    </div>    
</div>
{% endblock %}
