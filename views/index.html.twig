{% extends "layout.html.twig" %}

{% block title %}Home{% endblock %}

{% block content %}
<h1>Le blog d'un écrivain</h1>
{% for billet in billets %}
    <div class="container index">
        <div class="row">
            <div class="col-sm-offset-1 col-sm-6">
                <h2><a href="{{ path('billet', { 'id': billet.id }) }}">{{ billet.title }}</a></h2>
                <p><strong>Posté le {{ billet.dateAjout|date("d/m/y") }} 
                {% if billet.dateModif != "0000-00-00" %}
                    (modifié le : {{ billet.dateModif|date("d/m/y") }})
                {% endif %}</strong><br/>
                <i>{{ billet.nbComments }} commentaires</i></p>
                <p>{{ billet.content | truncate(200)|raw }}</p>
                <p><a href="{{ path('billet', { 'id': billet.id }) }}">Lire la suite</a></p>
            </div>
        </div>
    </div>
{% endfor %}
{% endblock %}
